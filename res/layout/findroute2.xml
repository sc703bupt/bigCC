<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/search2_background_grey"
  android:orientation="vertical">
     <LinearLayout
        android:id="@+id/findrouteTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/findrouteBackButton"
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:background="@drawable/backbutton_selector"
            android:clickable="true" />

        <TextView
            android:id="@+id/findrouteTitle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/routeResult"
            android:background="@drawable/title_blue"
            android:gravity="fill"
            android:textColor="@color/title_text_color"
            android:textSize="18sp" />
    </LinearLayout>
    
    <fragment	  
          android:id="@+id/mapdisplayroute"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:name="com.google.android.gms.maps.MapFragment"
          />
          
</LinearLayout>


